<Page x:Class="WPF.Views.Owner.AccommodationStats2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Views.Owner"
      mc:Ignorable="d" 
      Height="641" Width="400"
      Title="AccommodationStats2">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Line" BasedOn="{StaticResource LineOwner}"/>
            <Style TargetType="Button" BasedOn="{StaticResource ButtonOwner}"/>
            <Style TargetType="Label" BasedOn="{StaticResource LabelOwner}"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="1*"/>
 
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Accommodation" Grid.ColumnSpan="2"/>
        <Label Content="" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Line X2="1"  Grid.ColumnSpan="2" Grid.Row="2"/>
        <Label Grid.Row="3" Content="Select a year:"/>
        <ComboBox Grid.Row="3" Grid.Column="1"  ItemsSource="{Binding YearList}" SelectedItem="{Binding SelectedYear}"/>
        <Line X2="1"  Grid.Row="4" Grid.ColumnSpan="2"/>
        <Label Grid.Row="5" Content="Select a month:"/>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding MonthList}" SelectedItem="{Binding SelectedMonth}"/>
        <Label Grid.Row="6" Content="Number of reservations:"/>
        <Label Grid.Row="6" Grid.Column="1" Content=""/>
        <Label Grid.Row="7" Content="Number of canceled reservations:"/>
        <Label Grid.Row="7" Grid.Column="1" Content=""/>
        <Label Grid.Row="8" Content="Number of postponed reservations:"/>
        <Label Grid.Row="8" Grid.Column="1" Content=""/>
        <Label Grid.Row="9" Content="Number of recommendations for renovation:"/>
        <Label Grid.Row="9" Grid.Column="1" Content=""/>
        <Line X2="1"  Grid.Row="10" Grid.ColumnSpan="2"/>
        <Label Grid.Row="11" Content="Most booked month:"/>
        <Label Grid.Row="11" Grid.Column="1" Content=""/>
    </Grid>
</Page>
