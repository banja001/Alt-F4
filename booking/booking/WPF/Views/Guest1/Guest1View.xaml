<Window x:Class="booking.View.Guest1View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:booking.View"
        xmlns:cvt="clr-namespace:booking.Converter"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Guest" Height="760" Width="846" WindowStartupLocation="CenterScreen">
    <Grid>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0">
            <Button Content="Tutorial" Height="20" Width="55" Margin="5 0"/>
            <Label Name="lbUserName" Content="UserName"/>
            <Label Content="|   Score:"/>
            <Label Name="lbScore" Content="0"/>
        </WrapPanel>
    <TabControl Name="tabControl">
        <TabItem Name="tabItemOverview" Header="Overview" Height="22" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"></RowDefinition>
                    <RowDefinition Height="0.2*"></RowDefinition>
                    <RowDefinition Height="0.7*"></RowDefinition>
                    <RowDefinition Height="0.4*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Accommodation overview" FontSize="24" FontWeight="Bold" Margin="10 0"/>
                 <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10 10">
                        <RadioButton Content="Overview" RenderTransformOrigin="0.722,0.613" IsChecked="True"/>
                        <RadioButton Grid.Column="0" Content="Anywhere, anytime" Margin="10 0" RenderTransformOrigin="0.722,0.613"/>
                    </WrapPanel>
                    <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header="Search" Margin="10 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <WrapPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <CheckBox x:Name="CheckBoxApartment" Content="Apartment" HorizontalAlignment="Left" Unchecked="CheckBoxUnchecked" Checked="CheckBoxChecked" Margin="10 0"/>
                            <CheckBox x:Name="CheckBoxHouse" Content="House" HorizontalAlignment="Center" Unchecked="CheckBoxUnchecked" Checked="CheckBoxChecked" Margin="10 0"/>
                            <CheckBox x:Name="CheckBoxCabin" Content="Cabin" HorizontalAlignment="Right" Unchecked="CheckBoxUnchecked" Checked="CheckBoxChecked" Margin="10 0"/>
                        </WrapPanel>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Name" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0"/>
                        <TextBox Grid.Row="1" Grid.Column="1"  x:Name="tSearchBarName" Height="20" Text="{Binding SearchedAccommodation.Name, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="1" Grid.Column="2" Content="State" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <ComboBox Grid.Row="1" Grid.Column="3" x:Name="StateComboBox" Height="20" ItemsSource="{Binding States, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedState}" SelectionChanged="StateSelectionChanged"/>

                        <Label Grid.Row="1" Grid.Column="4" Content="City" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <ComboBox Grid.Row="1" Grid.Column="5" x:Name="CityComboBox"  Height="20" SelectedItem="{Binding SelectedCity}" IsEnabled="False" />

                        <Label Grid.Row="2" Content="Guests" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0"/>
                        <xctk:IntegerUpDown Grid.Row="2" Grid.Column="1" x:Name="tSearchBarNumberOfGuests" Height="20" Text="{Binding SearchedAccommodation.NumOfGuests, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="2" Grid.Column="2" Height="30" Content="Days" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <xctk:IntegerUpDown Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" x:Name="tSearchBarNumberOfDays" Height="20" Text="{Binding SearchedAccommodation.NumOfDays, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Grid.Row="1" Grid.Column="6" x:Name="SeeAllButton" Height="20" Width="67" Content="See all" HorizontalAlignment="Right" Click="SeeAll"/>
                        <Button Grid.Row="2" Grid.Column="6" x:Name="SearchAccommodationButton" Height="20" Width="67" Content="Search" HorizontalAlignment="Right" Click="SearchAccommodations"/>
                        
                    </Grid>
                </GroupBox>

                <Button Grid.Row="3" Grid.Column="1" x:Name="ReserveAccommodationButton" Width="67" Content="Reserve" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="ReserveAccommodations" Margin="10 10"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Accommodations" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0"/>
                <DataGrid Grid.Row="4" Grid.ColumnSpan="2" x:Name="accommodationData"
                          ItemsSource="{Binding AccommodationDTOs, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedAccommodation, UpdateSourceTrigger=PropertyChanged}"
                           IsReadOnly="True"
                           SelectionMode="Single"
                           CanUserResizeColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" 
                           ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" AutoGenerateColumns="False" Margin="10 0 10 10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" CanUserResize="False"  Width="4*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" CanUserResize="False" Width="3*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" CanUserResize="False" Width="2*"/>
                        <DataGridTextColumn Header="Max capacity" Binding="{Binding MaxCapacity}" Width="2*"/>
                        <DataGridTextColumn Header="Min days to use" Binding="{Binding MinDaysToUse}" Width="2.5*"/>
                        <DataGridTextColumn Header="Min days to cancel" Binding="{Binding MinDaysToCancel}" Width="2.5*"/>
                        <DataGridTemplateColumn Header="Images" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="ImagesButton" Click="OpenImages" Content="View" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Label Content="Accommodations" HorizontalAlignment="Left" Margin="10,334,0,0" VerticalAlignment="Top" Height="28"/>
            </Grid>
        </TabItem>
        <TabItem Name="tabItemRate" Header="Rate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                    <RowDefinition Height="1.5*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.ColumnSpan="4" Content="Rate your accommodations" FontSize="24" FontWeight="Bold" Margin="10 0"/>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Stayed in" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10 0"/>
                <ListBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Name="lbStayedIn"
                            ItemsSource="{Binding StayedInAccommodations}" 
                             SelectedItem="{Binding SelectedFromList, UpdateSourceTrigger=PropertyChanged}"
                             SelectionMode="Single"
                             Margin="0 5 10 10 "/>

                <Label Grid.Row="2" Grid.Column="0" Content="Clean" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0"/>
                <syncfusion:SfRating Grid.Row="2" Grid.Column="1" Name="stClean" HorizontalAlignment="Left" Height="30" ItemsCount="5" VerticalAlignment="Center" Width="150" MouseUp="CleanStarsClick"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Owner" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0"/>
                <syncfusion:SfRating Grid.Row="3" Grid.Column="1" Name="stOwner" HorizontalAlignment="Left" Height="30" ItemsCount="5" VerticalAlignment="Center" Width="150" MouseUp="OwnersKindnessStarsClick"/>

                <Label Grid.Row="2" Grid.Column="2" Content="Comment" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.RowSpan="2" Grid.Column="3" Name="txtbComment" Text="{Binding RatingComment, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" Margin="10 10 10 0"/>
                
                <GroupBox Grid.Row="4" Grid.ColumnSpan="4" Header="Images" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>       
                            <ColumnDefinition Width="8*"></ColumnDefinition>       
                            <ColumnDefinition Width="1*"></ColumnDefinition>       
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Image url" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="tbImageUrl" Text="{Binding ImageUrl, UpdateSourceTrigger=PropertyChanged}" Height="25" TextWrapping="Wrap" VerticalAlignment="Center" TextChanged="tbImageUrl_TextChanged" Margin="0 0 10 0"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Added" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10 0"/>
                        <ListView Grid.Row="1" Grid.Column="1" Name="lvAddedImages" 
                                     ItemsSource="{Binding AddedImages, UpdateSourceTrigger=PropertyChanged}" 
                                     SelectedItem="{Binding SelectedAddedImages, UpdateSourceTrigger=PropertyChanged}"
                                      SelectionMode="Single" Margin="0 0 10 10">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        
                        <Button Grid.Row="0" Grid.Column="2" Name="bAddImage" Command="{Binding AddImageCommand}"  Content="Add" HorizontalAlignment="Center" Height="23" VerticalAlignment="Center" Width="63" Margin="0 0 10 0"/>
                            <Button Grid.Row="1" Grid.Column="2" Content="Remove" Command="{Binding RemoveImageCommand}" HorizontalAlignment="Center" Height="23" VerticalAlignment="Top" Width="63" Margin="0 0 10 0"/>     
                    </Grid>
                </GroupBox>
                
                <GroupBox Grid.Row="5" Grid.ColumnSpan="4" Header="Renovation suggestion (optional)" Margin="10 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*"></RowDefinition>   
                            <RowDefinition Height="4*"></RowDefinition>   
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="9*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txtbRenovationDescription" Text="{Binding RenovationDescription, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" Margin="0 10 10 0"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="How urgent" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Height="24" Margin="0 0 10 0"/>
                    </Grid>
                </GroupBox>
                <Button Grid.Row="6" Grid.Column="3" Name="bSubmitRate" Command="{Binding SubmitRateCommand}" Content="Submit rate" HorizontalAlignment="Right" Height="30" VerticalAlignment="Center" Width="79" Margin="10 0" IsEnabled="False"/>
            </Grid>
        </TabItem>
        <TabItem Name="tabItemReservations" Header="Reservations" Height="22" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Reservations overview" FontSize="24" FontWeight="Bold" Margin="10 0"/>
                
                <GroupBox Grid.Row="1" Grid.Column="0" Header="All reservations" Margin="10">
                    <Grid>
                        <DataGrid x:Name="reservationsData"
                              ItemsSource="{Binding ReservationAccommodationDTOs, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding SelectedReservation, UpdateSourceTrigger=PropertyChanged}"
                               IsReadOnly="True"
                               SelectionMode="Single"
                               CanUserResizeColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" 
                               ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" AutoGenerateColumns="False" Margin="10 20 10 20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Accommodation" Binding="{Binding AccommodationName}" CanUserResize="False"  Width="2*"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding Location}" CanUserResize="False" Width="2*"/>
                                <DataGridTextColumn Header="Start date" Binding="{Binding StartDate, Converter={cvt:DateTimeToDateOnlyConverter}}" CanUserResize="False" Width="1*"/>
                                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, Converter={cvt:DateTimeToDateOnlyConverter}}" CanUserResize="False" Width="1*"/>
                                <DataGridTemplateColumn Header="Reservation options" Width="2*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button x:Name="bPostpone" Command="{Binding Path=DataContext.PostponeReservationCommand,       
                                                         RelativeSource= {RelativeSource FindAncestor,
                                                         AncestorType={x:Type DataGrid}}}" 
                                                         Content="Postpone" Margin="10"/>
                                                <Button x:Name="bCancel" Command="{Binding Path=DataContext.CancelReservationCommand,       
                                                         RelativeSource= {RelativeSource FindAncestor,
                                                         AncestorType={x:Type DataGrid}}}" Content="Cancel" Margin="10" />
                                            </WrapPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="2" Grid.Column="0" Header="Reservation requests" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <DataGrid Grid.Row="0" Grid.Column="0" x:Name="reservationRequestsData"
                              ItemsSource="{Binding ReservationRequestsDTOs, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding SelectedReservationRequestDTO, UpdateSourceTrigger=PropertyChanged}"        
                               IsReadOnly="True"
                               SelectionMode="Single"
                               CanUserResizeColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" 
                               ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" AutoGenerateColumns="False" Margin="10 20 10 0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Accommodation" Binding="{Binding AccommodationName}" CanUserResize="False"  Width="2*"/>
                                <DataGridTextColumn Header="Location" Binding="{Binding Location}" CanUserResize="False" Width="2*"/>
                                <DataGridTextColumn Header="Request" Binding="{Binding Request}" CanUserResize="False" Width="1*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" CanUserResize="False" Width="*"/>
                                <DataGridTemplateColumn x:Name="dgbViewOwnersComment" Header="Owner's comment" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="bViewOwnersComment" Command="{Binding Path=DataContext.ViewCommentCommand,       
                                                         RelativeSource= {RelativeSource FindAncestor,
                                                         AncestorType={x:Type DataGrid}}}" Content="View" Margin="20 10"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Grid.Row="1" Grid.Column="0" Content="Report" HorizontalAlignment="Right" VerticalAlignment="Center" Width="63" Height="26" Margin="10 0"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem Name="tabItemForums" Header="Forums">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>
    </Grid>
</Window>
